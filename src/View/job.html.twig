{% extends "layout.html.twig" %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/index.css">
    <link rel="stylesheet" href="/assets/css/job.css">
{% endblock %}
{% block navbar %}
    {% include 'navbar.html.twig' %}
{% endblock %}

{% block content %}
    <div id="titre-metier" class="container-fluid">
        <h1>{{ job.name }}</h1>
    </div>
    <div class="container">

        <a href="/jobs"><button class="btn btn-lg">retour</button></a>
        <h3>{{job.name}}</h3>

        <div id="description" class="page-header">
            {% if job.video is empty and job.image is empty %}
            <div class="col-sm-12 col-md-12">
            {% endif %}
            {% if job.video is not empty or job.image is not empty %}
            <div class="col-sm-12 col-md-8">
            {% endif %}
                <p>{{job.description}}</p>
            </div>
            <div class="col-sm-12 col-md-4">
                {% if job.video %}
                <div class="embed-responsive embed-responsive-4by3">
                    <iframe width="560" height="315" class="iframe embed-responsive-item" frameborder="0"
                            src="{{ job.video }}"></iframe>
                </div>
                {% endif %}
                {% if job.video is empty and job.image is not empty %}
                    <img src="{{ job.image }}" alt="image du métier en cours" class="img-responsive" style="margin-bottom: 5vh">
                {% endif %}

            </div>
        </div>
    </div>

    <div class="container" id="comments">
        <div class="row">
            {% for comment in comments %}
                <div class="col-md-4 col-xs-12 active">
                    <div class="row row-height">
                        <div class="col-md-4 col-xs-4 p-right">
                            <img src="{{ comment.avatar }}" class="circle-avatar">
                        </div>
                        <div class="col-md-8 col-xs-8">
                            <div class="row">
                                <h4 class="p-margin bold">{{ comment.firstname }} {{ comment.lastname }}</h4>
                            </div>
                            <div class="row">
                                {% if comment.wilder == 1 %}
                                    <p class="p-margin gray">Ancien wilder</p>
                                {% endif %}
                            </div>
                            <div class="row">
                                <p class="p-margin gray">Travaille à : {{ comment.company }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-xs-4">
                            <img src="../../assets/images/quotes.png" alt="guillemets" width=60" class="p-right">
                        </div>
                        <div class="col-md-8 col-xs-8">
                            <div class="row">
                                <h5 class="bold">Les plus du métier</h5>
                                <p class="border-left">{{ comment.question1 }}</p>
                            </div>
                            <div class="row">
                                <h5 class="bold">Les moins du métier</h5>
                                <p class="border-left">{{ comment.question2 }}</p>
                            </div>
                            <div class="row">
                                <h5 class="bold">Commentaire libre</h5>
                                <p class="border-left">{{ comment.question3 }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="row align-center">
            <a href="#" class="col-md-6 col-xs-12">
                <button class="btn btn-lg">Voir plus de commentaires</button>
            </a>
            <a href="/job/{{ job.id }}/add-comment" class="col-md-6 col-xs-12">
                <button class="btn btn-lg">Ajouter un commentaire</button>
            </a>
        </div>
    </div>

{% endblock %}


{% block footer %}
    {% include 'footer.html.twig' %}
{% endblock %}